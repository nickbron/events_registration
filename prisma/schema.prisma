generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Events {
  id          String         @id @default(cuid())
  title       String         @db.VarChar(255)
  description String?
  organizer   String
  eventDate   DateTime
  userId      Registartion[]
}

model Registartion {
  id        String         @id @default(cuid())
  firstName String
  lastName  String
  email     String         @unique
  birthday  DateTime
  created   DateTime       @updatedAt
  whereKnow WereKnowStatus @default(Friends)
  events    Events?        @relation(fields: [eventsId], references: [id])
  eventsId  String?
}

enum WereKnowStatus {
  SocialMedia
  Friends
  FoundMySelf
}
