// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Events {
  id               String             @id @default(cuid())
  title            String             @db.VarChar(255)
  description      String?
  organizer        String
  eventDate        DateTime
  UserRegistration UserRegistration[]
}

model UserRegistration {
  id        String         @id @default(cuid())
  firstName String
  lastName  String
  email     String
  birthday  DateTime
  created   DateTime       @default(now())
  whereKnow WereKnowStatus @default(SocialMedia)
  id_event  Events         @relation(fields: [id], references: [id])
}

enum WereKnowStatus {
  SocialMedia
  Friends
  FoundMySelf
}
