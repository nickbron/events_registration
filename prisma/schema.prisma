generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Events {
  id           String         @id
  title        String         @db.VarChar(255)
  description  String?
  organizer    String
  eventDate    DateTime
  Registration Registration[]
}

model Registration {
  id        String         @id
  firstName String
  lastName  String
  email     String         @unique
  birthday  DateTime
  created   DateTime
  whereKnow WereKnowStatus @default(Friends)
  eventsId  String?
  Events    Events?        @relation(fields: [eventsId], references: [id])
}

enum WereKnowStatus {
  SocialMedia
  Friends
  FoundMySelf
}
